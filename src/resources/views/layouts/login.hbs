<body>
    <nav class="navbar">
        <div class="max-width">
            <div class="logo"><a href="/">Online<span> Academy</span></a></div>
            <ul class="menu">
                <li><a href="/" class="menu-btn">Home</a></li>
                <li><a href="/#hot-categories" class="menu-btn">Category</a></li>
                <li><a href="/course-list?score=-1" class="menu-btn">All Courses</a></li>
                <li><a href="/register-course" class="menu-btn">Register</a></li>
                <li><a href="/watchlist" class="menu-btn">WatchList</a></li>
                <li><a href="/profile" class="menu-btn">User Account</a></li>
            </ul>
            <div class="menu-btn">
                <i class="fas fa-bars"></i>
            </div>
        </div>
    </nav>

    <div class="login" style="min-height: 35rem;">
        <h1 class="title">Sign In</h1>
        <div class="container">
                <div class="row">
                    <div class="col">
                        <a href="#" class="fb btn"><i class="fa fa-facebook fa-fw"></i> Login with FaceBook</a>
                        <a href="#" class="twitter btn"><i class="fa fa-twitter fa-fw"></i> Login with Twitter</a>
                        <a href="#" class="google btn"><i class="fa fa-google fa-fw"></i> Login with Google+</a>
                    </div>

                    <div class="vl">
                        <div class="vl-innertext">Or</div>
                    </div>

                    <div class="al">
                        <p>Or sign in manually:</p>
                    </div>

                    <div class="col">
                        <form class="validate-form" method="post" action="/login">
                            <div class="validate-input" data-validate="Username is required">
                                <input class="input100" type="text" name="username" placeholder="Username" required="required">
                            </div>
                            <div class="validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="password" placeholder="Password" required="required">
                            </div>
                            <div>
                                {{#if messages.error}}
                                    <div>
                                        <p style="color: red;">{{messages.error}}</p>
                                    </div>
                                {{/if}}
                            </div>
                            <input type="submit" value="Login">
                        </form>
                    </div>
                </div>
        </div>

        <div class="bottom_container">
            <div class="row">
                <div class="col">
                    <a href="/register" class="btn1"><i class="fas fa-user-plus"></i> Sign up</a>
                </div>
                <div class="col">
                    <a href="#" class="btn1"><i class="fas fa-key"></i> Forgot Password ?</a>
                </div>
            </div>
        </div>
    </div>

    <!-- footer section start -->
    <div id="footer">
        <div class="social-list">
            <a href="#!"><i class="fab fa-facebook-square"></i></a>
            <a href="#!"><i class="fab fa-instagram"></i></i></a>
            <a href="#!"><i class="fab fa-snapchat"></i></a>
