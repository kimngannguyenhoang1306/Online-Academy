<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Online Academy</title>
    <link rel="icon" href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRaXhIuOMaJhZXtu2CWuMk-8nIpLM5VFIfaaEzE9QDmPGDgvXYtd1jU3-L_zTV9ioO3qE8&usqp=CAU" type="image/x-icon" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap"
          rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="lib/slick/slick.css" rel="stylesheet">
    <link href="lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
</head>

<body>
{{>Header}}

<div class="modal fade" id="unregisterCourseModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="unregisterCourseForm" method="POST" action="">
                    <div class="modal-header">
                        <h5 class="modal-title">Unregister this course</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <h4>Confirm to unregister this course.</h4>
                            <input type="text" class="form-control" id="unregisterCourseIdInput" name="unregisterCourseIdInput"
                                style="display:none" required>
                            <input type="text" class="form-control" id="userUnregisterCourse" name="userUnregisterCourse"
                                style="display:none" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-outline-success" name="action" value="unregister_course" type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i>
                            Yes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-danger"
                                aria-hidden="true"></i>No</button>
                    </div>
                </form>
            </div>
        </div>

<!-- Cart Start -->
<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                            <tr>
                                <th>Course Name</th>
                                <th>Price</th>
                                <th>Lecturer</th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody class="align-middle">
                            {{#each courses}}
                            {{#if this.isBlocked}}
                            {{else}}
                                <tr>
                                    <td>
                                        <div class="img">
                                            <a style="cursor: pointer" href="/product-detail?id={{this.id}}"><img
                                                src="{{this.avatar}}" alt="Image"></a>
                                            <p>{{this.name}} {{#unless course.completed}}
                                                <span
                                                        style="border: solid 2px !important; font-size: 12px; font-family: 'Open Sans', sans-serif"
                                                        class="rounded border-warning text-warning p-1">
                                                Updating
                                            </span>
                                            {{/unless}}</p>
                                        </div>
                                    </td>
                                    <td>{{this.price}}$</td>
                                    <td>
                                        {{this.owner.name}}
                                    </td>
                                    <td>
                                        <button value="remove_course" class="mb-2" type="button" data-toggle="modal"
                                                data-target="#unregisterCourseModal" data-id="{{this._id}}" data-user="{{user._id}}"><i
                                                    class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                            {{/if}}
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Cart End -->

{{>Footer}}

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/slick/slick.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>
<script src="/assets/script/script.js"></script>
<script>
    $('#unregisterCourseModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var courseid = button.data('id');
            var user = button.data('user');
            var modal = $(this)

            modal.find('#unregisterCourseIdInput').val(courseid);
            modal.find('#userUnregisterCourse').val(user);
        })
</script>
</body>

</html>